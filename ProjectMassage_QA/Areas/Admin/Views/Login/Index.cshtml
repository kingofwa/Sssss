
@{
    Layout = null;
}
@model ProjectMassage_QA.Areas.Admin.Models.Loginmodel
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>QA_TECH</title>
    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&amp;display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="/public_QA/admin/QA_plugins/fontawesome-free/css/all.min.css">
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="/public_QA/admin/QA_plugins/tempusdominus-bootstrap-4/css/tempusdominus-bootstrap-4.min.css">
    <link rel="stylesheet" href="/public_QA/admin/QA_plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- Theme style -->
    <link href="~/Public_QA/Admin/QA_dist/css/qatech.min.css" rel="stylesheet" />
</head>
<body class="login-page" style="min-height: 566.188px;">
    <div class="login-box">
        <div class="login-logo">
            <a href="../../index2.html"><b>QA</b>TECH</a>
        </div>
        <!-- /.login-logo -->
        <div class="card">
            <div class="card-body login-card-body">
                <p class="login-box-msg">ĐĂNG NHẬP</p>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, null, new { @class = "alert alert-danger" })
                     <div class="input-group mb-3">
                         @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @placeholder="UserName"})
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        @Html.TextBoxFor(model => model.Password, new { @class = "form-control", @placeholder = "Password", @type = "password" })
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                     <button type="submit" class="btn btn-primary btn-block">Đăng nhập</button>
                }
            </div>
            <!-- /.login-card-body -->
        </div>
    </div>
    <!-- /.login-box -->
    <!-- jQuery -->
    <script src="/public_QA/admin/QA_plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="/public_QA/admin/QA_plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="/public_QA/admin/QA_dist/js/quocanhtech.js"></script>
</body>
</html>
