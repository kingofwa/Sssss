@{
    var list_acount = ViewData["list_acount"] as List<ProjectMassage_QA.Areas.Admin.Models.FW.tbl_User>;
}
<div class="modal fade" id="Modal_Close_work_shift">
    <div class="modal-dialog modal-xl">
        <div class="QA_Admin-modal-content le">
            <div class="modal-header  maume"  style="padding:10px;">
                <h6 class="modal-title text-uppercase text-white">ĐÓNG CA</h6>
                <span class="text-danger pr-2" data-dismiss="modal" aria-label="Close" aria-hidden="true"><i class="fa fa-times"></i></span>
            </div>
            <div class="modal-body">
                <form id="Modal_work_form" class="row mr-2 ml-2 mb-2" action="">
                    <div class="col-md-12">
                        <h6 class="text-danger pt-2 ">BÀN GIAO</h6>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="row">
                                    <label for="" class="col-sm-5 col-form-label text-info">Người giao <code><b>*</b></code></label>
                                    <div class="col-sm-7">
                                        <input class="form-control" value="@Session["userName"].ToString()" disabled style="cursor: no-drop; padding-left: 32px;">
                                        <input type="hidden" id="id_nguoibangao"  value="@Session["userId"]"/>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="row">
                                    <label for="" class="col-sm-5 col-form-label text-info" style="padding-left: 40px;">Người nhận <code><b>*</b></code></label>
                                    <div class="col-sm-7">
                                        <select id="Id_nhan" onchange="Nguoiduocgiao()" class="QA_form-control">
                                            <option value="0">Chọn người nhận</option>
                                            @foreach (var item in list_acount)
                                            {
                                                <option value="@item.Id_User">@item.Name_User</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <h6 class="text-danger pt-2 mr-4"> DOANH THU CA LÀM</h6>
                        <div class="row" id="show_total_money">
                            <label for="" class="col-sm-5 col-form-label text-info">Tổng tiền ca</label>
                            <div class="col-sm-7">
                                <input type="text" class="form-control text-right text-danger" id="Tong_tien" >
                            </div>
                            <label for="" class="col-sm-5 col-form-label text-danger">Tiền mặt <code><b>*</b></code></label>
                            <div class="col-sm-7">
                                <input type="text" class="form-control text-right text-danger" id="Tong_tien_mat" disabled style="cursor: no-drop;">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <h6 class="text-danger pt-2 mb-4"></h6>
                        <div class="row">
                            <label for="" class="col-sm-5 col-form-label text-info text-center">Tiền đầu ca</label>
                            <div class="col-sm-7">
                               <input type="text" class="form-control text-right text-danger" id="Tien_dau_ca" disabled style="cursor: no-drop;">
                            </div>
                            <label for="" class="col-sm-5 col-form-label text-danger text-center">Tổng tiền cuối ca <code><b>*</b></code></label>
                            <div class="col-sm-7">
                                <input type="text" class="form-control text-right text-danger" id="Tong_tien_cuoi_ca" disabled style="cursor: no-drop;">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group row">
                            <label for="" class="col-sm-2 col-form-label">Ghi chú</label>
                            <div class="col-sm-10">
                                <textarea name="" id="Note_shift" cols="2" rows="1" class="form-control"></textarea>
                            </div>
                        </div>
                    </div>
                </form>
                <button id="dong_ca" class="btn btn-primary btn-xs mr-3 mt-2 float-right" style="width: 100px;"><i class="fa fa-save"></i> Lưu</button>
                <button type="button" data-dismiss="modal" class="btn btn-xs btn-danger float-right mt-2 m-2"><i class="fa fa-times"></i> Hủy</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>




