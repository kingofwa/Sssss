



<div class="modal fade" id="modal_thutien">
    <div class="modal-dialog modal-xl">
        <div class="QA_Admin-modal-content lepvc">
            <div class="modal-header maume" style="padding:10px;">
                <h6 class="modal-title text-uppercase text-white">Phiếu thu</h6>
                <span class="text-danger pr-2" data-dismiss="modal" aria-label="Close" aria-hidden="true"><i class="fa fa-times"></i></span>
            </div>
            <div class="modal-body">
                <div class="container">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-6">
                                <div class="text-center">
                                    @*<img src="" class="logo_res brand-image img-circle" alt="QA"  style="height:80px;display:inline-block;"/>*@
                                    <h6 class="viethoaCT" style="font-size: 14px;"></h6>
                                    <div class="form-group row" style="margin-right: 102px; margin-bottom:0px;">
                                        <label for="" class="col-sm-6 col-form-label" style="font-size: 12px; padding-left: 83px; ">Ngay chứng từ</label>
                                        <div class="col-sm-6">
                                            <input type="date" class="form-control " id="ngaychungtu" onchange="Ngay_chung_tu()" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                                        </div>
                                    </div>
                                    <div class="form-group row" style="margin-right: 102px;">
                                        <label for="" class="col-sm-7 col-form-label" style="font-size: 12px; padding-left: 83px; ">Số chứng từ</label>
                                        <div class="col-sm-4">
                                            <input type="text" class="form-control le" id="sochungtu_thu" value="" disabled />
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-6">
                                <div class="text-center" style="font-size: 15px;">
                                    <h6 class="text-blue viethoaCT"></h6>
                                    <p class="mb-1 diachi"></p>
                                    <p class="mb-1 sdt"> </p>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="text-center">
                                    <h4 class="mt-4 text-danger">PHIẾU THU TIỀN</h4>
                                    @*<span><input type="text" class="form-control le_input_center" value="Ngày: @DateTime.Now.ToString("dd") Tháng @DateTime.Now.ToString("MM")  Năm @DateTime.Now.ToString("yyyy")" /></span>*@
                                </div>
                            </div>
                        </div><!-- het row -->
                        <form id="Modal_work_form">
                            <div class="form-group row">
                                <label for="" class="col-sm-2 col-form-label le">Người nộp <code>*</code></label>
                                <div class="col-sm-5">
                                    <input type="text" class="form-control le" id="nguoinoptien" onkeyup="ValueNguoiNop()">
                                </div>
                                <label for="" class="col-sm-2 col-form-label le">Số điện thoại <code>*</code></label>
                                <div class="col-sm-3">
                                    <input type="number" class="form-control le" id="sodienthoaithu" min="0" max="14">
                                </div>
                                <label for="" class="col-sm-2 col-form-label le">Địa chỉ</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control le" id="diachithu">
                                </div>
                                <label for="" class="col-sm-2 col-form-label le">Số tiền <code>*</code></label>
                                <div class="col-sm-10">
                                    <input type="number" class="form-control le text-danger" id="sotienthu">
                                </div>
                                <label for="" class="col-sm-2 col-form-label le">Nội dung thu</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control le" id="noidungthu">
                                </div>
                                <label for="" class="col-sm-2 col-form-label le">Ghi chú</label>
                                <div class="col-sm-10">
                                    <textarea name="" id="Note_thu" cols="2" rows="3" class="form-control"></textarea>
                                </div>
                            </div>
                        </form>
                    </div><!-- het col-md-12 -->
                    <div class="content">
                        <div class="nguoilapdon row">
                            <div class="col-6">
                                <div class="text-center">
                                    <p><b>Người nộp</b></p>
                                    <span class="text-danger" id="nguoinop"> </span>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="text-center">
                                    <p><b>Người lập đơn</b></p>
                                    <span id="nguoilap">@Session["userName"].ToString()</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <input type="hidden" id="id_phieuthu" value="0" />
                <div class="float-lg-right mt-5">
                    <button data-dismiss="modal" class="btn btn-danger btn-xs mr-3"><i class="fa fa-times"></i> Hủy</button>
                    <button id="save_phieuthu" class="btn btn-primary btn-xs mr-3 le "><i class="fa fa-save"></i> Lưu</button>
                </div>
            </div>
        </div>
    </div>
</div> <!--end model check in -->

<script>
    function ValueNguoiNop() {
        var value_nguoi_nop = document.getElementById("nguoinoptien").value;
        document.getElementById("nguoinop").innerHTML = value_nguoi_nop;
    }

    
</script>