@{
    ViewBag.Title = "Services";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var list_room = ViewData["list_room"] as List<ProjectMassage_QA.Areas.Admin.Models.FW.tblRoom>;
    var list_cate = ViewData["list_cate"] as List<ProjectMassage_QA.Areas.Admin.Models.FW.tblCategories>;

}


<div class="QA_warapper-content-category ">
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-12">
                <div class="header-content-category">
                    <div class="menu-crud float-lg-right mt-2">
                        <ul>
                            <li class="d-inline-block mr-2">
                                <a id="Modal_room" class="btn btn-xs btn-success " href="#"><i class="fas fa-plus mr-1"></i> Thêm</a>
                            </li>
                            <li class="d-inline-block mr-2">
                                <a class="btn btn-xs btn-warning text-white disabled" id="edit_room"><i class="fas fa-user-edit mr-1"></i> Sữa</a>
                            </li>
                            <li class="d-inline-block">
                                <a class="btn btn-xs btn-danger text-white disabled" id="delete_room"><i class="fas fa-trash-alt mr-1"></i> Xóa</a>
                            </li>
                        </ul>
                    </div>
                </div><!-- het header CRUD -->
            </div>
            <div class="card-body lepvcc black direct-chat-messages">
                <div class="col-md-12">
                    <div class="content-category">
                        <table class="table text-center table-bordered table-hover" id="myTable">
                            <thead>
                                <tr class="maume">
                                    <th style="width:5%;">#</th>
                                    <th>Tên phòng</th>
                                    @*<th>Thể loại</th>*@
                                    <th style="width:20%;">Trạng thái</th>
                                    <th style="width:50%;">Ghi chú</th>
                                </tr>
                            </thead>
                            <tbody id="show-body">
                                @{
                                    foreach (var item in list_room)
                                    {
                                        <tr id="row_@item.Id">
                                            <td>
                                                <input type="radio" name="radiocheck" class="activecheckedit" id="typehide_@item.Id" value="@item.Id" />
                                            </td>
                                            <td id="R_Name_@item.Id">@item.R_Name</td>

                                            @*<td id="CategoryId_@item.Id">@item.tblCategories.C_Name</td>*@

                                            <td id="R_Active_@item.Id">
                                                @if (@item.R_Active == true)
                                                {
                                                    <a id="color_status_@item.Id" class="btn btn-xs btn-success" onclick='Room_lepvc(@item.Id)'>Kích hoạt</a>
                                                }
                                                else
                                                {
                                                    <a id="color_status_@item.Id" class="btn btn-xs btn-danger" onclick='Room_lepvc(@item.Id)'>Khóa</a>
                                                }
                                            </td>
                                            <td id="Note_@item.Id">@item.R_Note</td>
                                        </tr>

                                    }
                                }

                            </tbody>

                        </table>
                    </div>
                </div>
            </div><!-- het col-md-12 category -->
        </div><!-- het row -->
    </div><!-- het col-md-12 -->
</div><!--/QA_warapper-content-category-->
@RenderPage("modal/Addroom.cshtml")
