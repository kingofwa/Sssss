
@{
    ViewBag.Title = "Mannager_Employee";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var list_NumberOfServings = ViewData["list_NumberOfServings"] as List<ProjectMassage_QA.Areas.Admin.Models.FW.NumberOfServings_Result>;
}

<div class="QA_warapper-content-category">
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-12">
                <div class="header-content-category">
                    <div class="menu-crud float-lg-right mt-2">
                        <ul>
                            <li class="d-inline-block mr-2">
                                <a class="btn btn-xs btn-orange " href="#"><i class="fas fa-recycle mr-1"></i> Tải lại</a>
                            </li>
                        </ul>
                    </div>
                </div><!-- het header CRUD -->
            </div>

            <div class="col-md-12">
                <div class="content-category">
                    <table class="table text-center table-bordered table-hover" id="myTable">
                        <thead>
                            <tr class="maume">
                                <th style="width:5%;">#</th>
                                <th>TÊN NHÂN VIÊN</th>
                                <th>TỔNG SỐ LẦN PV</th>
                                <th style="width:50%;">TỔNG TIỀN</th>
                            </tr>
                        </thead>
                        <tbody id="show-body">
                            @{
                                var j = 0;
                            }
                            @foreach (var item in list_NumberOfServings)
                            {
                                <tr>
                                    <td>@j</td>
                                    <td>@item.E_Name</td>
                                    <td><b> @item.totalNumber</b></td>
                                    <td class="text-right"><b style="color:red;">@item.totalmoney.GetValueOrDefault().ToString("N0")</b></td>
                                </tr>
                              j++;
                            }
                        </tbody>
                    </table>

                </div>
            </div><!-- het col-md-12 category -->
        </div><!-- het row -->
    </div><!-- het col-md-12 -->
</div><!--/QA_warapper-content-category-->
