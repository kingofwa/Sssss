
@{
    ViewBag.Title = "Mannager_Employee";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var list_star_evalute = ViewData["list_star_evalute"] as List<ProjectMassage_QA.Areas.Admin.Models.FW.mediumStar12_Result>;
}

<div class="QA_warapper-content-category">
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-12">
                <div class="header-content-category">
                    <div class="menu-crud float-lg-right mt-2">
                        <ul>
                            <li class="d-inline-block mr-2">
                                <a class="btn btn-xs btn-orange " href=""><i class="fas fa-recycle mr-1"></i> Tải lại</a>
                            </li>
                        </ul>
                    </div>
                </div><!-- het header CRUD -->
            </div>

            <div class="col-md-12">
                <div class="content-category">
                    <table class="table text-center table-bordered table-hover" id="myTable">
                        <thead>
                            <tr class="maume">
                                <th>#</th>
                                <th>TÊN NHÂN VIÊN</th>
                                <th>TỔNG LẦN ĐÁNH GIÁ</th>
                                <th>TỔNG SỐ SAO</th>
                                <th>TRUNG BÌNH SAO</th>
                            </tr>
                        </thead>
                        <tbody id="show-body">
                            @{
                                var j = 0;
                            }
                            @foreach (var item in list_star_evalute)
                            {
                                <tr>
                                    <td>@j</td>
                                    <td>@item.E_Name</td>
                                    <td>@item.aaa</td>
                                            <td>@item.AVG_Employee</td>
                                    <td>
                                        @for (var i = 0; i < 5; i++)
                                        {
                                            if (i < item.star)
                                            {
                                                <i class="fa fa-star" style="color: orange; padding: 2px; font-size: 15px; "></i>
                                            }
                                        }
                                    </td>
                                </tr>
                                j++;
                            }
                        </tbody>
                    </table>

                </div>
            </div><!-- het col-md-12 category -->
        </div><!-- het row -->
    </div><!-- het col-md-12 -->
</div><!--/QA_warapper-content-category-->

