@{
    ViewBag.Title = "AccountUser";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var list_user = ViewData["list_user"] as List<ProjectMassage_QA.Areas.Admin.Models.FW.tbl_User>;
}

<div class="QA_warapper-content-category">
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-12">
                <div class="header-content-category">
                    <div class="menu-crud float-lg-right mt-2">
                        <ul>
                            <li class="d-inline-block mr-2">
                                <a id="Add_uers" class="btn btn-xs btn-success " href="#"><i class="fas fa-plus mr-1"></i> Thêm</a>
                            </li>
                            <li class="d-inline-block mr-2">
                                <a class="btn btn-xs btn-warning text-white disabled" id="edit_user"><i class="fas fa-user-edit mr-1"></i> Sữa</a>
                            </li>
                            <li class="d-inline-block">
                                <a class="btn btn-xs btn-danger text-white disabled" id="delete_user"><i class="fas fa-trash-alt mr-1"></i> Xóa</a>
                            </li>
                        </ul>
                    </div>
                </div><!-- het header CRUD -->
            </div>

            <div class="col-md-12">
                <div class="content-category">
                    <table class="table text-center table-bordered table-hover">
                        <thead>
                            <tr class="maume">
                                <th style="width:5%;">#</th>
                                <th>Tài Khoản</th>
                                <th>Email</th>
                                <th>Status</th>
                                <th style="width:40%;">Ghi chú</th>
                            </tr>
                        </thead>
                        <tbody id="show-body">
                            @{
                                foreach (var item in list_user)
                                {
                                    <tr id="row_@item.Id_User">
                                        <td>
                                            <input type="radio" name="radiocheck" class="activecheckedit" id="typehide_@item.Id_User" value="@item.Id_User" />
                                        </td>
                                        <td id="U_Name_@item.Id_User" class="maume"><a href="/Admin/GRANT_PERMISSION/Cap_Phat_Quyen_Cho_Tai_Khoan_Nguoi_Dung?id=@item.Id_User" style="color: #e2e2e2; font-weight: 600;"> @item.Name_User</a></td>
                                        <td id="U_Email_@item.Id_User">@item.Email_User</td>
                                        <td id="U_Status_@item.Id_User">
                                            @if (@item.U_Status == true)
                                            {
                                                <a id="color_status_@item.Id_User" class="btn btn-xs btn-success" onclick='Users(@item.Id_User)'>Kích hoạt</a>
                                            }
                                            else
                                            {
                                                <a id="color_status_@item.Id_User" class="btn btn-xs btn-danger" onclick='Users(@item.Id_User)'>Khóa</a>
                                            }
                                        </td>
                                        <td id="Note_@item.Id_User">@item.Note</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div><!-- het col-md-12 category -->
        </div><!-- het row -->
    </div><!-- het col-md-12 -->
</div><!--/QA_warapper-content-category-->
@RenderPage("modal/add_user.cshtml")

