
<div class="modal fade" id="modal_chitien">
    <div class="modal-dialog modal-xl">
        <div class="QA_Admin-modal-content lepvc">
            <div class="modal-header maume"  style="padding:10px;">
                <h6 class="modal-title text-uppercase text-white">Phiếu chi</h6>
                <span class="text-danger pr-2" data-dismiss="modal" aria-label="Close" aria-hidden="true"><i class="fa fa-times"></i></span>
            </div>
            <div class="modal-body">
                <div class="container">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-6">
                                <div class="text-center">
                                    <h6 class="viethoaCT" style="font-size: 14px;"></h6>
                                    <div class="form-group row" style="margin-right: 102px; margin-bottom:0px;">
                                        <label for="" class="col-sm-6 col-form-label" style="font-size: 12px; padding-left: 83px; ">Ngay chứng từ</label>
                                        <div class="col-sm-6">
                                            <input type="date" class="form-control " id="ngaychungtuchi" onchange="Ngay_chung_tu_chi()" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                                        </div>
                                    </div>
                                    <div class="form-group row" style="margin-right: 102px;">
                                        <label for="" class="col-sm-7 col-form-label" style="font-size: 12px; padding-left: 83px; ">Số chứng từ</label>
                                        <div class="col-sm-4">
                                            <input type="text" class="form-control le" id="sochungtu_chi" value="" disabled />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="text-center" style="font-size: 15px;">
                                    <h6 class="text-blue viethoaCT"></h6>
                                    <p class="mb-1 diachi"></p>
                                    <p class="mb-1 sdt"></p>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="text-center">
                                    <h4 class="mt-4 text-danger">PHIẾU CHI TIỀN</h4>
                                    @*<span><input type="text" class="form-control le_input_center" value="Ngày: @DateTime.Now.ToString("dd") Tháng @DateTime.Now.ToString("MM")  Năm @DateTime.Now.ToString("yyyy")" /></span>*@
                                </div>
                            </div>
                        </div><!-- het row -->
                        <form id="Modal_work_form">
                            <div class="form-group row">
                                <label for="" class="col-sm-2 col-form-label le">Người nhận <code>*</code></label>
                                <div class="col-sm-5">
                                    <input type="text" class="form-control le" id="nguoinhan" onkeyup="ValueNguoiNhan()">
                                </div>
                                <label for="" class="col-sm-2 col-form-label le">Số điện thoại <code>*</code></label>
                                <div class="col-sm-3">
                                    <input type="number" class="form-control le" id="sodienthoai">
                                </div>
                                <label for="" class="col-sm-2 col-form-label le">Địa chỉ</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control le" id="diachi">
                                </div>
                                <label for="" class="col-sm-2 col-form-label le">Số tiền <code>*</code></label>
                                <div class="col-sm-10">
                                    <input type="number" class="form-control le text-danger" id="sotien">
                                </div>
                                <label for="" class="col-sm-2 col-form-label le">Nội dung chi</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control le" id="noidungchi">
                                </div>
                                <label for="" class="col-sm-2 col-form-label le">Ghi chú</label>
                                <div class="col-sm-10">
                                    <textarea name="" id="Note_chi" cols="2" rows="3" class="form-control"></textarea>
                                </div>
                            </div>
                        </form>
                    </div><!-- het col-md-12 -->
                    <div class="content">
                        <div class="nguoilapdon">
                            <div class="row">
                                <div class="col-6">
                                    <div class="text-center">
                                        <p><b>Người nhận</b></p>
                                        <span class="text-danger" id="chuky_nguoinhan"> </span>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="text-center">
                                        <p><b>Người lập phiếu</b></p>
                                        <span id="nguoilap">@Session["userName"].ToString()</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <input type="hidden" id="id_phieuchi" value="0"/>
                <div class="float-lg-right mt-5">
                    <button data-dismiss="modal" class="btn btn-danger btn-xs mr-3"><i class="fa fa-times"></i> Hủy</button>
                    <button id="save_phieuchi" class="btn btn-primary btn-xs mr-3 le "><i class="fa fa-save"></i> Lưu</button>
                </div>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div> <!--end model check in -->

<script>
    function ValueNguoiNhan() {
        var value_nguoi_nhan = document.getElementById("nguoinhan").value;
        document.getElementById("chuky_nguoinhan").innerHTML = value_nguoi_nhan;
    }
</script>