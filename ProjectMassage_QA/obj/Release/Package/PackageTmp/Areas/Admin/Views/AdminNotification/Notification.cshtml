
@{
    ViewBag.Title = "Thong bao";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var list_Notifications = ViewData["list_Notifications"] as List<ProjectMassage_QA.Areas.Admin.Models.FW.tblNotification>;
}

<div class="QA_warapper-content-category">
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-12">
                <div class="header-content-category">
                    <div class="menu-crud float-lg-right mt-2">
                        <ul>
                            <li class="d-inline-block mr-2">
                                <a id="Modal_thongbao" class="btn btn-xs btn-success " href="#"><i class="fas fa-plus mr-1"></i> Thêm</a>
                            </li>
                            <li class="d-inline-block mr-2">
                                <a class="btn btn-xs btn-warning text-white disabled" id="edit_thongbao"><i class="fas fa-user-edit mr-1"></i> Sữa</a>
                            </li>
                            <li class="d-inline-block">
                                <a class="btn btn-xs btn-danger text-white disabled" id="delete_thongbao"><i class="fas fa-trash-alt mr-1"></i> Xóa</a>
                            </li>
                        </ul>
                    </div>
                </div><!-- het header CRUD -->
            </div>

            <div class="col-md-12">
                <div class="content-category">
                    <table class="table text-center table-bordered table-hover">
                        <thead>
                            <tr class="maume">
                                <th colspan="1">#</th>
                                <th>Content</th>
                                <th>Trạng thái</th>
                                <th>Ghi chú</th>
                            </tr>
                        </thead>
                        <tbody id="show-body-noti">
                            @foreach (var item in list_Notifications)
                            {
                                <tr id="row_@item.Id">
                                    <td>
                                        <input type="radio" name="radiocheck" class="activecheckedit" id="typehide_@item.Id" value="@item.Id" />
                                    </td>
                                    <td id="N_Content_@item.Id">@item.N_Content</td>
                                    <td id="N_Show_@item.Id">
                                        @if (@item.N_Show == 1)
                                        {
                                            <a id="color_status_@item.Id" class="btn btn-xs btn-success" onclick='Noti_lepvc(@item.Id)'>Kích hoạt</a>
                                        }
                                        else
                                        {
                                            <a id="color_status_@item.Id" class="btn btn-xs btn-danger" onclick='Noti_lepvc(@item.Id)'>Khóa</a>
                                        }
                                    </td>
                                    <td id="Note_@item.Id">@item.N_Note</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div><!-- het col-md-12 category -->
        </div><!-- het row -->
    </div><!-- het col-md-12 -->



</div><!--/QA_warapper-content-category-->
@RenderPage("modal/AddNotification.cshtml")