<!-- model ca lam việc -->
@{
    var list_shift = ViewData["list_work_shift"] as List<ProjectMassage_QA.Areas.Admin.Models.FW.tbl_Loai_Ca_Lam_Viec>;
}
<div class="modal fade" id="Modal_work_shift">
    <div class="modal-dialog modal-default">
        <div class="modal-addtypeofwork">
            <div class="modal-header maume"  style="padding:10px;">
                <h6 class="card-title text-white text-uppercase">Ca làm việc</h6>
                <span class="text-danger" data-dismiss="modal" aria-label="Close" aria-hidden="true"><i class="fa fa-times"></i></span>
            </div>
            <div class="modal-body mauchu">
                <form id="Modal_work_form " class="row" action="">
                    <input type="hidden" id="Id_loaica" value="0">
                    <div class="form-group col-6">
                        <label for="">Chọn ca làm việc <code>*</code></label>
                        <select id="chose_work_shift" class="QA_form-control">
                            @foreach (var item in list_shift)
                            {
                                <option value="@item.Id">@item.Name</option>
                            }
                        </select>
                    </div>
                    <div class="form-group col-6">
                        <label for="">Nhân viên </label>
                        <input type="text" id="NameEmployee" class="form-control" value="@Session["userName"].ToString()" disabled style="cursor:no-drop;" />
                    </div>
                    <div class="form-group col-6">
                        <label for="">Từ giờ </label>
                        <input type="datetime" id="FirtTime" value="@DateTime.Now.ToString("hh:mm tt | dd/MM/yyyy")" class="form-control">
                    </div>
                    <div class="form-group col-6">
                        <label for="">Đến giờ</label>
                        <input type="datetime" id="LastTime" value="@DateTime.Now.AddHours(8).ToString("hh:mm tt | dd/MM/yyyy")" class="form-control">
                    </div>
                    <div class="form-group col-12">
                        <label for="">Tiền đầu ca</label>
                        <input type="number" id="Tien_ca_truoc_ban_giao" class="form-control" value="" min="0" />
                    </div>
                    <div class="form-group col-12">
                        <label for="">Ghi chú</label>
                        <textarea id="Note_shift" cols="25" rows="1" class="form-control" style="border-radius:0px;"></textarea>
                    </div>
                    <div class="right_button" style="margin-left: 341px;">
                        <button type="button" id="save_work_shift" class="btn btn-xs btn-primary float-right mt-2 m-2"><i class="fa fa-save"></i> Lưu</button>
                        <button type="button" data-dismiss="modal" class="btn btn-xs btn-danger float-right mt-2 m-2"><i class="fa fa-times"></i> Hủy</button>
                    </div>
                </form>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!--end model thong tin khach hang --> 